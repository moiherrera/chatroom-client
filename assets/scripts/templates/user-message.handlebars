{{#each messages as |message|}}
  <div class="row">
    <div class="col-sm-8 col-md-9 col-xl-10">
      <div class="card">
        <div class="card-header col" data-id="{{message._id}}">
          <div class="row">
            <div class="username col-sm-12 col-md-4">{{message.owner.email}}</div>
            <div class="date col-sm-12 col-md-8">{{pretty-timestamps message}}</div>
          </div>
        </div>
        <div class="card-body">
          <p class="card-text">{{message.text}}</p>
        </div>
      </div>
    </div>
    <div class="col-sm-4 col-md-3 col-xl-2 handle-btn">
      <!-- This is the modal button -->
      <button class="edit-btn btn btn-sm btn-outline-warning btn-block sticky-top" data-id="{{message._id}}" data-toggle="modal" data-target="#exampleModalCenter">Change</button>
      <!-- End modal button -->
      <button class="delete-btn btn btn-sm btn-outline-danger btn-block sticky-top" data-id="{{message._id}}">Delete</button>
    </div>
  </div>
  <!-- End card -->
  <br>
  <br>
{{/each}}
